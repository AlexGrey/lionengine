<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
     <properties>
        <jdk.version>1.6</jdk.version>
        <jdk.home>${JDK_6_HOME}</jdk.home>
        <android.version>1.5_r3</android.version>
        <android.sdk>3</android.sdk>
        <android.maven.version>4.0.0-rc.2</android.maven.version>
    </properties>
    <parent>
        <groupId>com.b3dgs.sample</groupId>
        <artifactId>sample-parent</artifactId>
        <version>0.1.0-SNAPSHOT</version>
        <relativePath>../sample-parent</relativePath>
    </parent>
    <artifactId>sample-android</artifactId>
    <name>Sample Android</name>
    <packaging>apk</packaging>
    <dependencies>
        <dependency>
        	<groupId>com.google.android</groupId>
        	<artifactId>android</artifactId>
        	<version>${android.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.b3dgs.lionengine</groupId>
            <artifactId>lionengine-core-android</artifactId>
            <version>${lionengine.version}</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.groupId}.game</Bundle-SymbolicName>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${jdk.version}</source>
                    <target>${jdk.version}</target>
                    <executable>${jdk.home}/bin/javac</executable>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                <artifactId>android-maven-plugin</artifactId>
                <version>${android.maven.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <sdk>
                        <platform>${android.sdk}</platform>
                    </sdk>
                </configuration>
            </plugin>
            <plugin>
                <groupId>lt.velykis.maven</groupId>
                <artifactId>pde-target-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>pde-target</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>